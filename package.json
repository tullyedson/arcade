{
  "name": "retro-arcade",
  "version": "1.0.0",
  "description": "A collection of classic arcade games built with vanilla JavaScript",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "cap:add": "npx cap add",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:build:ios": "npx cap build ios",
    "cap:build:android": "npx cap build android"
  },
  "keywords": [
    "arcade",
    "games",
    "retro",
    "electron",
    "capacitor",
    "mobile"
  ],
  "author": "tullyedson",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "@capacitor/cli": "^5.5.0",
    "@capacitor/core": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/android": "^5.5.0"
  },
  "build": {
    "appId": "com.tullyedson.retroarcade",
    "productName": "Retro Arcade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!android/**/*",
      "!ios/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
} 